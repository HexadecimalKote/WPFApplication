<Window x:Class="WPFApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApplication"   
        mc:Ignorable="d"
        Title="DockPanel" Height="350" Width="600">

    <!-- DockPanel - прижимает свое содержимое к определенной стороне внешнего контейнера -->
    <!--LastChildFill = последний эл. заполнить все оставшееся пространство -->
    <DockPanel LastChildFill="True">
        <!-- Default DockPanel.Dock = Left -->
        <Button DockPanel.Dock="Top"    Background="Cyan" Content="Top"/>
        <Button DockPanel.Dock="Bottom"  Background="DarkGoldenrod" Content="Bottom"/>
        <Button DockPanel.Dock="Left"   Background="Gainsboro" Content="Left 1" >
            <Button.LayoutTransform>
                <RotateTransform Angle="90" />
            </Button.LayoutTransform>
        </Button>
        <Button DockPanel.Dock="Left"   Background="Salmon" Content="Left 2" />
        <Button DockPanel.Dock="Right"  Background="Lime" Content="Rigth" />
        <TextBlock Text="test text test text" DockPanel.Dock="Right" VerticalAlignment="Center">
            <TextBlock.LayoutTransform>
                <RotateTransform Angle="90"/>
            </TextBlock.LayoutTransform>
        </TextBlock>
        <Button Background="LightGreen" Content="Center" />
    </DockPanel>

</Window>
