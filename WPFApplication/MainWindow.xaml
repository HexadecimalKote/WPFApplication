<Window x:Class="WPFApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApplication"
        mc:Ignorable="d"
        Title="Buttons" Height="350" Width="600">

    <Grid Name="LayoutGrid">
        <StackPanel>
            <Button Name="button1" Width="100" Background="Aqua" Height="30" Content="Click me XAML" Click="Button1_Click"/>
            <Button Name="button2" Width="100" Background="Bisque" Height="30" Content="Click me C#" />
            <Button Name="acceptButton" Content="ОК" IsDefault="True" Click="AcceptButton_Click" />
            <Button Name="escButton" Content="Выход" IsCancel="True" Click="EscButton_Click" />
            <!-- может служить основой для создания ползунка в элементах ScrollBar и ScrollViewer-->
            <RepeatButton Name="myRepeatButton" Delay="1000" Interval="1000" Width="100" Height="30" Content="RepeatButton" Click="AddTextInTextBox"/>
            <TextBox Name="RepeatedText" Text="Hello"></TextBox>


            <ToggleButton Name="toggleButton"     Content="Toggle" Checked="HandleCheck" Unchecked="HandleUnchecked" Indeterminate="HandleIntermediate" Margin = "0 20 0 20" Width = "100" HorizontalAlignment = "Center"/>
            <TextBlock    Name = "toggleTextBlock" Width = "300" HorizontalAlignment = "Center" Height = "50" FontSize = "24"/>

        </StackPanel>
    </Grid>
</Window>
