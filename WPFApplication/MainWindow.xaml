<Window x:Class="WPFApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApplication"
        mc:Ignorable="d"
        Title="Text controls" Height="350" Width="800">


    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0">
            <!--TextBlock выводит статический текст -->
            <!--LineHeight    - Высота строки
                TextWrapping  - Настройка переноса текста по умолчанию NoWrap
                TextAlignment - Выравнивание текста
                TextDecorations - декорация текста -->
            <TextBlock FontSize="20" Foreground="Gray">Some text...</TextBlock>
            <TextBlock FontSize="15" Foreground ="DarkGreen" Margin="15 0 0 0">Some text...</TextBlock>
            <TextBlock TextWrapping="Wrap">
                <Run FontSize="20" Foreground="Red" FontWeight="Bold">O</Run>
                <Run FontSize="16" Foreground="LightSeaGreen">негин был, один из немногих................/////////........// вап вап</Run>
            </TextBlock>
            <TextBlock Margin="0 20 0 0">
                Некий текст..........
                <LineBreak/>
                <Run TextDecorations="Underline" Foreground="DarkGreen">
                    Перевод на новую строку
                </Run>
            </TextBlock>
        </StackPanel>
        
        <StackPanel Grid.Column="1" Grid.Row="0">
            <!--TextChanged="TextBox_TextChanged" событие на изменение содержимого -->
            <!--AcceptsReturn="True" - перенос строки по нажатию enter -->
            <!--AcceptsTab="True" - разрешить использоват табуляцию -->
            <!--MaxLength="250" - Максимальное количество введенных символов -->
            <!--IsReadOnly="True" - сделать недоступным для ввода -->
            <!--SpellCheck.IsEnabled="True" - включить проверку орфографии -->
            <!--Language="ru-ru" - язык ввода русский -->

            <TextBox Padding="10"
                     Height="80"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     AcceptsTab="True" 
                     TextWrapping="Wrap"
                     SpellCheck.IsEnabled="True"
                     Language="ru-ru">Привет как дила? Проверка орфографии.</TextBox>

            <StackPanel>
                <TextBox Name="SelectText" Height="30" SelectionBrush="Blue" Text="Текст для выделения"/>
                <Button Content="Выделить текст" Height="30" Width="100" Click="Button_Click" Margin="10" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1">
            <!--  Если не предполагается использование клавиш быстрого доступа,
            то для вывода обычной текста вместо меток лучше использовать элемент TextBlock -->
            <Label Target="{Binding ElementName=ClickToLabel}" HorizontalContentAlignment="Center">_Go to text box</Label>
            <TextBox Name="ClickToLabel" Height="30" Width="100" VerticalContentAlignment="Center" Padding="3" Margin="0 0 0 10"></TextBox>

            <Label Target="{Binding ElementName=Password}" HorizontalContentAlignment="Center">_Password</Label>
            <PasswordBox Name="Password"  PasswordChar="*" MinHeight="30" Width="200" VerticalContentAlignment="Center" Padding="3"></PasswordBox>
        </StackPanel>
    </Grid>
</Window>
