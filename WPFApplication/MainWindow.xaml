<Window x:Class="WPFApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApplication"   
        mc:Ignorable="d"
        Title="Grid" Height="350" Width="750">

    <Grid Name="LayoutGrid" ShowGridLines="false">
        <Grid.RowDefinitions>
            <!-- Автоматические размеры = Auto -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!-- Абсолютные размеры = пиксели - px, дюймы - in, сантиметры - cm, точки -pt -->
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <!-- Пропорциональные размеры 1.5* = 300 едениц-->
            <ColumnDefinition Width="0.5*"/> <!--200 * 0.5 = 100 -->
            <ColumnDefinition Width="1*" />  <!--300 / 1.5 = 200 * 1 = 200-->
        </Grid.ColumnDefinitions>
        
        <!-- Column - столбик Row - строка-->
        <Button Grid.Column="2" Grid.Row="0" Content="Строка 1 Столбец 1"/>
        <Button Grid.Column="2" Grid.Row="1" Content="Объединение трех столбцов" Grid.ColumnSpan="3"/>
        <Button Grid.Column="3" Grid.Row="2" Content="Строка 3 Столбец 2"/>
        <Button Grid.Column="5" Grid.Row="0" Content="Объединение четырех строк" Grid.RowSpan="5">
            <Button.LayoutTransform>
                <RotateTransform Angle="90"/>
            </Button.LayoutTransform>
        </Button>

        <!-- GridSpliter - Разделитель между столбцами и строками -->
        <GridSplitter Grid.Column="1" ShowsPreview="True" Width="3"
                HorizontalAlignment="Center" VerticalAlignment="Stretch" Grid.RowSpan="7"/>

        <GridSplitter Grid.Row="6" ShowsPreview="False" Height="3"
                 HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.ColumnSpan="6" Background="Black"/>

        <!-- UniformGrid тот же Grid, но столбцы и строки одного размера и синтаксис определения упрощен -->
        <UniformGrid Rows="2" Columns="2" Grid.Column="2" Grid.Row="7" Grid.ColumnSpan="5">
            <Button Content="Left Top"     />
            <Button Content="Right Top"    />
            <Button Content="Left Bottom"  />
            <Button Content="Right Bottom" />
        </UniformGrid>
    </Grid>
</Window>
